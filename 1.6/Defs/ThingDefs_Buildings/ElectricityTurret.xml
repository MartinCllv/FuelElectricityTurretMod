        <AccuracyMedium>0.95</AccuracyMedium>
        <AccuracyLong>0.9</AccuracyLong>
        <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
        <DeteriorationRate>0</DeteriorationRate>
        <Mass>150</Mass>
        <Flammability>0</Flammability>
      </statBases>
      <verbs>
