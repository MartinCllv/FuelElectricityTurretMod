      <graphicData>
        <texPath>Things/Building/Security/OrbitalBeam_Turret</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      </graphicData>
      <statBases>
        <AccuracyTouch>0.1</AccuracyTouch>
